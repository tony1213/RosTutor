<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/virtual_joystick_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- The black backgroud on which all the other images will be displayed. -->
    <ImageView
        android:id="@+id/black_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/black_background" />

    <!-- Outer ring representing the maximum magnitude. -->
    <ImageView
        android:id="@+id/outer_ring"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/grey_ring_notched"></ImageView>

    <!-- The intensity circle representing current magnitude. -->
    <ImageView
        android:id="@+id/intensity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:src="@drawable/intensity"></ImageView>

    <!-- Magnitude text display -->
    <TextView
        android:id="@+id/magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0%"
        android:textSize="15px" />

    <!-- 0 degree marker -->
    <ImageView
        android:id="@+id/widget_0_degrees"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:src="@drawable/large_d_widget_3"></ImageView>

    <!-- 15 degree marker -->
    <ImageView
        android:id="@+id/widget_15_degrees"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:rotation="15.0"
        android:src="@drawable/small_d_widget_3" />

    <!-- 30 degree marker -->
    <ImageView
        android:id="@+id/widget_30_degrees"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:rotation="30.0"
        android:src="@drawable/small_d_widget_3" />

    <!-- 45 degree marker -->
