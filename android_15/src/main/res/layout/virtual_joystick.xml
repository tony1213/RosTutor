        android:antialias="true"
        android:rotation="60.0"
        android:src="@drawable/small_d_widget_3" />

    <!-- 75 degree marker -->
    <ImageView
        android:id="@+id/widget_75_degrees"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:rotation="75.0"
        android:src="@drawable/small_d_widget_3" />

    <!-- 90 degree marker -->
    <ImageView
        android:id="@+id/widget_90_degrees"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:rotation="90.0"
        android:src="@drawable/large_d_widget_3" />

    <!-- 105 degree marker -->
