        android:layout_centerInParent="true"
        android:antialias="true"
        android:rotation="345.0"
        android:src="@drawable/small_d_widget_3" />

    <ImageView
        android:id="@+id/top_angle_slice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/top_angle_slice"></ImageView>

    <ImageView
        android:id="@+id/mid_angle_slice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:src="@drawable/mid_angle_slice"></ImageView>


    <!-- Previous velocity divet -->
    <ImageView
        android:id="@+id/previous_velocity_divet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:src="@drawable/previous_velocity" />

    <!-- The size of the center divet should always remain the same, since it's supposed
      to represent a deadzone that is dependent on the size of a human finger. -->
    <ImageView
        android:id="@+id/center_divet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/center_widget"></ImageView>

    <!-- Thumb divet -->
    <ImageView
        android:id="@+id/thumb_divet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:antialias="true"
        android:src="@drawable/directional_arrow" />

</RelativeLayout>
